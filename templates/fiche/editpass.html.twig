{% extends 'bien/administration.html.twig' %}

{% block title %}Modifier le mot de passe{% endblock %}

{% block body %}
    <div class='grix xs2 container'>
        <h3 class='text-center'>Modifier le mot de passe</h3>
        <form method='POST'>
            <div class="mb-3">
                <label for="pass">Mot de passe</label>
                <input type="password" id='pass' name='pass' class='form-control'>
            </div>
            <div class="form-field">
                <label for="pass2">Confirmer le mot de passe</label>
                <input type="password" id='pass2' name='pass2' class='form-control'>
            </div>
            <button class='btn btn-primary m-3'>Valider</button>
        </form>
    </div>

{% endblock %}


