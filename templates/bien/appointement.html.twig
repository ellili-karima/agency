{% extends 'base.html.twig' %}

{% block body %}
	<div class='container'>
		<div class='row'>
			<div class='col-12'>
                <h3 class='text-center m-5'>La liste des rendez-vous</h3>
                    <table class='table'>
                        <tr>
                            <th>Titre</th>
                            <th>Date</th>
                            <th>Email</th>
                            <th>Téléphone</th>
                            <th>Nom</th>
                            <th>Prénom</th>
                        </tr>
                        {% if appointements %}
            
                            {% for appointement in appointements %}
                            
                                <tr>
                                    <td>{{biens[appointement.id].titre}}</td>
                                    <td>{{appointement.date|date('d/m/Y')}}</td>
                                    <td>{{appointement.email}}</td>
                                    <td>{{appointement.tel}}</td>
                                    <td>{{appointement.nom}}</td>
                                    <td>{{appointement.prenom}}</td>
                                </tr>
                            {% endfor %}
                    </table>
            {% endif %}
            
            </div>
        </div>
    </div>
{% endblock %}