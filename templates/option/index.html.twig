{% extends 'bien/administration.html.twig' %}

{% block title %}Options{% endblock %}

{% block body %}
    <div class='container'>
    <h1 class='text-center'>Les options des biens</h1>
    
    <button class='btn' id='btn_ajouter'><a href="{{ path('app_option_new') }}" class="link-light text-decoration-none">Ajouter une option</a></button>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Designation</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for option in options %}
            <tr>
                <td>{{ option.id }}</td>
                <td>{{ option.designation }}</td>
                <td>
                    {{ include('option/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </div>
{% endblock %}
